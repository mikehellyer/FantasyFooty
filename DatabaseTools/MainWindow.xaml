<Window x:Class="DatabaseTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseTools"
        mc:Ignorable="d"
        Title="Database Tools" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="311*"/>
            <ColumnDefinition Width="481*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCreate" Content="Create Database" HorizontalAlignment="Left" Margin="54,54,0,0" VerticalAlignment="Top" Width="106" Click="btnCreate_Click"/>
        <Button x:Name="btnDestroy" Content="Destroy Database" HorizontalAlignment="Left" Margin="54,101,0,0" VerticalAlignment="Top" Width="106" Click="btnDestroy_Click"/>

    </Grid>
</Window>
